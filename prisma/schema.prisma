datasource db {
  provider = "sqlite"
  url      = "file:./quotes.db" //env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Quote {
  id     Int    @id @default(autoincrement())
  quote  String
  author String?
}

model UserLoginToken {
  id     Int    @id @default(autoincrement())
  email String  
  token String
  hasBeenUsed Boolean
}

model UserPushToken {
  id     Int    @id @default(autoincrement())  
  deviceOs String
  deviceToken String
  userId String?
}

model UserFavorites {
  id     Int    @id @default(autoincrement())
  quoteId  String
  userId String  
}

model UserKVStore {
  id     Int    @id @default(autoincrement())
  userId String  
  valueKey  String
  valueData  String
}
